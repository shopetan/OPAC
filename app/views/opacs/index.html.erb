<%- model_class = Opac -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nbc) %></th>
      <th><%= model_class.human_attribute_name(:isbn) %></th>
      <th><%= model_class.human_attribute_name(:tr) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:pub) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:phys) %></th>
      <th><%= model_class.human_attribute_name(:series) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:titleheading) %></th>
      <th><%= model_class.human_attribute_name(:authorheading) %></th>
      <th><%= model_class.human_attribute_name(:holdingsrecord) %></th>
      <th><%= model_class.human_attribute_name(:holdingloc) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @opacs.each do |opac| %>
      <tr>
        <td><%= link_to opac.id, opac_path(opac) %></td>
        <td><%= opac.nbc %></td>
        <td><%= opac.isbn %></td>
        <td><%= opac.tr %></td>
        <td><%= opac.author %></td>
        <td><%= opac.pub %></td>
        <td><%= opac.year %></td>
        <td><%= opac.phys %></td>
        <td><%= opac.series %></td>
        <td><%= opac.note %></td>
        <td><%= opac.titleheading %></td>
        <td><%= opac.authorheading %></td>
        <td><%= opac.holdingsrecord %></td>
        <td><%= opac.holdingloc %></td>
        <td><%=l opac.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_opac_path(opac), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      opac_path(opac),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_opac_path,
            :class => 'btn btn-primary' %>
